@model IEnumerable<myBook.Models.TacGia>
@{
    ViewData["Title"] = "Danh sách tác giả";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3">
    <i class="bi bi-plus-circle"></i> Thêm tác giả mới
</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th scope="col">Tên tác giả</th>
            <th scope="col" style="width: 180px;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenTG</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaTG" class="btn btn-sm btn-warning me-2">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaTG" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
