@model IEnumerable<myBook.Models.TheLoai>

@{
    ViewData["Title"] = "Thể loại sách";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3">
    <i class="bi bi-plus-circle"></i> Thêm thể loại mới
</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Tên thể loại</th>
            <th>Mô tả</th>
            <th style="width: 150px;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenTheLoai</td>
                <td>@item.MoTa</td>
                <td>
                    <a class="btn btn-sm btn-warning me-1" asp-action="Edit" asp-route-id="@item.MaTheLoai">Sửa</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.MaTheLoai"
                       onclick="return confirm('Bạn có chắc chắn muốn xoá thể loại này không?');">
                        Xoá
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(function () {
        @if (TempData["success"] != null)
        {
            <text>toastr.success("@TempData["success"]");</text>
        }
        @if (TempData["error"] != null)
        {
            <text>toastr.error("@TempData["error"]");</text>
        }
        });
    </script>
}
